{
  "tasks": {
    "dev": "deno run --allow-net --watch --import-map ./import_map.json ./mod.ts",
    "lint": "deno lint",
    "test": "deno test --import-map ./import_map.json",
    "play:prop": "deno run --import-map ./import_map.json ./prop/play.ts"
  },
  "fmt": {
    "options": {
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "useTabs": false
    },
    "files": {
      "exclude": [
        "./lock.json"
      ]
    }
  }
}
